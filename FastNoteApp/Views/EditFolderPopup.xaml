<?xml version="1.0" encoding="utf-8" ?>
    
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="FastNoteApp.Views.EditFolderPopup">

    <VerticalStackLayout>
        <Button BackgroundColor="Transparent" FontSize="24" Text="Rename" TextColor="Black" WidthRequest="200" Margin="5" Clicked="OnRenameClicked"/>
        <Button BackgroundColor="Transparent" FontSize="24" Text="Delete" TextColor="Black" WidthRequest="200" Margin="5" Clicked="OnDeleteClicked"/>
        <Button BackgroundColor="Transparent" FontSize="24" Text="Cancel" TextColor="Blue" WidthRequest="200" Margin="5" Clicked="OnCancelClicked"/>
    </VerticalStackLayout>

</toolkit:Popup>